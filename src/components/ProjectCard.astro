---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<a href={link} class="block">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow p-6">
    <img src={image} alt={title} class="w-full h-48 object-cover rounded-lg mb-4" />
    <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300">{description}</p>
  </div>
</a>